@model OrderVM
@{
    ViewBag.Title = "SiparisiOnayla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SiparisiOnayla</h2>

<div class="form">
    @using (Html.BeginForm("SiparisiOnayla", "Shopping", FormMethod.Post, new { @class = "form-horizontal tasi-form" }))
    {
        <div class="form-group">
            <label class="col-sm-2 col-sm-2 control-label">Gönderim Adresi</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.Order.ShippedAddress, new { @class = "form-control" })


            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-sm-2 control-label">Kart Numarası</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentVM.CardNumber, new { @class = "form-control" })


            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-sm-2 control-label">CVV</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentVM.CVV, new { @class = "form-control round-input" })

            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-sm-2 control-label">Expiry Month</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentVM.CardExpiryMonth, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-sm-2 control-label">Expiry Year</label>
            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.PaymentVM.CardExpiryYear, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Order.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(x=>x.Order.Email)
            </div>
        </div>


        <div class="form-group">
            <label class="col-sm-2 col-sm-2 control-label">Kart Üzerindeki İsim</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentVM.CardUserName, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-2 col-sm-2 control-label">Onayla</label>
            <div class="col-lg-10">
                <button class="form-control-static btn btn-success" style="width:300px"> Onay</button>

            </div>
        </div>
    }



</div>