@model Cart
@{
    ViewBag.Title = "CartPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row product-list">

    @foreach (CartItem item in Model.Sepetim)
    {
        <div class="col-md-4">
            <section class="panel">


                <div class="pro-img-box">




                    <img width="100" height="200" src="@item.ImagePath" alt="Resim yok" title="@item.Name" />
                    <a href="@Url.Action("DeleteFromCart",new { id=item.ID})" class="adtocart">
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </div>
                <div class="panel-body text-center">
                    <h4>
                        <a href="#" class="pro-title">
                            @item.Name x @item.Amount
                        </a>
                    </h4>
                    <p class="price">$@item.SubTotal</p>
                </div>
            </section>
        </div>
    }


</div>

