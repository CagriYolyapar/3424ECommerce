@model Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Kategori Ekleme Sayfası
                </header>
                <div class="panel-body">
                    <form role="form" class="form-horizontal tasi-form">
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Kategori İsmi</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })


                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Kategori Açıklaması</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })


                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
}