@model AppUser
@{
    ViewBag.Title = "AddAppUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Ürün Ekleme Sayfası
                </header>
                <div class="panel-body">
                    <form role="form" class="form-horizontal tasi-form">
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Kullanıcı İsmi</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })


                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Kullanıcı Emaili</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })


                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Kullanıcı Sifresi</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @readonly = true })


                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Kullanıcı Rolü</label>
                            <div class="col-lg-10">
                                @Html.EnumDropDownListFor(x => x.Status)


                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Kullanıcı Rolü</label>
                            <div class="col-lg-10">
                                @Html.EnumDropDownListFor(x => x.Status)


                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Yasaklı mı</label>
                            <div class="col-lg-10">
                                @Html.CheckBoxFor(x => x.IsBanned) Yasakla?


                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" type="submit">Ekle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
}



