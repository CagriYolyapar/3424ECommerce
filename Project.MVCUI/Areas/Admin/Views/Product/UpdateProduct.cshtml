
@model Product
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.HiddenFor(x=>x.ID)
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Ürün Güncelleme Sayfası
                </header>
                <div class="panel-body">
                    <form role="form" class="form-horizontal tasi-form">
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Ürün İsmi</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })


                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Ürün Fiyatı</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control" })


                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Ürün Stok Sayısı</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "form-control" })


                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Urun Kategorisi</label>
                            <div class="col-lg-10">
                                @Html.DropDownListFor(x => x.CategoryID, new SelectList(ViewBag.Kategoriler, "ID", "CategoryName"), "Lutfen Seciniz", new { @class = "form-control" })


                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" type="submit">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
}



