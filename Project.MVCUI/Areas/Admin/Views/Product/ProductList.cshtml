@model List<Product>
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="panel">
    <header class="panel-heading">
        Ürün Eklemek icin lütfen @Html.ActionLink("Tıklayınız","AddProduct")
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Urun İsmi</th>
                        <th>Urun Fiyatı</th>
                        <th class="hidden-phone">Ürün Kategorisi</th>
                        <th class="hidden-phone">Ürün Stok</th>
                        <th class="hidden-phone">Durum</th>
                        <th class="hidden-phone"> Sil</th>
                        <th class="hidden-phone">Güncelle</th>


                    </tr>
                </thead>
                <tbody>

                    @foreach (Product item in Model)
                    {
                    <tr class="gradeX">
                        <td>   @Html.ActionLink(item.ProductName, "ProductAttributeList","ProductAttribute",new { id=item.ID},null)      </td>
                        <td>
                            @item.UnitPrice
                        </td>
                        @if (item.Category == null)
                        {
                            <td class="hidden-phone">Kategorisi yok</td>
                        }
                        else
                        {
                            <td class="hidden-phone">@item.Category.CategoryName</td>
                        }

                        <td class="center hidden-phone">@item.UnitsInStock</td>
                        <td class="center hidden-phone">  @item.Status</td>
                        <td class="center hidden-phone">@Html.ActionLink("Sil", "DeleteProduct", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
                        <td class="center hidden-phone" > @Html.ActionLink("Güncelle", "UpdateProduct", new { id = item.ID }, new { @class = "btn btn-warning" })  </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</section>

