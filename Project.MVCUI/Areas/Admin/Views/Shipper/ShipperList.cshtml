@model List<Shipper>
@{
    ViewBag.Title = "ShipperList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="panel">
    <header class="panel-heading">
        Nakliye Şirketi Eklemek İçin Lütfen @Html.ActionLink("Tıklayınız.", "AddShipper")
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th class="hidden-phone">Şirket İsmi</th>
                        <th class="hidden-phone">Şirket Telefonu</th>
                        <th class="hidden-phone">Durum</th>
                        <th class="hidden-phone"> Sil</th>
                        <th class="hidden-phone">Güncelle</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (Shipper item in Model)
                    {
                        <tr class="gradeX">
                            <td>
                               @item.CompanyName
                            </td>
                            <td>
                                @item.Phone
                            </td>
                            <td class="center hidden-phone">  @item.Status</td>
                            <td class="center hidden-phone">@Html.ActionLink("Sil", "DeleteShipper", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
                            <td class="center hidden-phone"> @Html.ActionLink("Güncelle", "UpdateShipper", new { id = item.ID }, new { @class = "btn btn-warning" })  </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</section>