@model List<ProductAttribute>
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="panel">
    <header class="panel-heading">
        @Model[0].Product.ProductName ozellikleri
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th class="hidden-phone">Ozellik İsmi</th>
                        <th class="hidden-phone">Ozellik  Degeri</th>
                     


                    </tr>
                </thead>
                <tbody>

                    @foreach (ProductAttribute item in Model)
                    {
                        <tr class="gradeX">
                            <td> @item.Attribute.AttributeName     </td>
                            <td>@item.Value
                              
                            </td>
                           
                            
                         

                       
                         
                   
                          
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</section>



