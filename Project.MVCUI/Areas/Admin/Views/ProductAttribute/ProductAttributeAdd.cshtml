@model Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using(Html.BeginForm())
{
    @Html.HiddenFor(x => x.ID)
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Ürün Özelligi Ekleme Sayfası
                </header>
                <div class="panel-body">
                  

                 
                        <div class="form-group has-success">

                            <div class="col-lg-10">

                                @foreach (EntityAttribute item in ViewBag.AttributeList)
                                {
                                <div class="col-lg-2">
                                    <!--BUrada Html helper kullanmamaya dikkat edin yoksa render edilirken iki tane tag cıkartıyor. -->
                                    <input type="checkbox" name="checkbox" value="@item.ID" /> @item.AttributeName
                                </div>
                                  
                                       


                                 
                                




                                }





                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" type="submit">Submit</button>
                            </div>
                        </div>
                   
                </div>
            </section>
        </div>
    </div>
}


