@model Product
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="panel">
    <header class="panel-heading">
        Ürün Eklemek icin lütfen @Html.ActionLink("Tıklayınız", "ProductAttributeAdd","ProductAttribute",new { id=Model.ID},null)
    </header>
    <div class="panel-body">
        <div class="adv-table">


            @using (Html.BeginForm("ProductAttributeValue", "ProductAttribute", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.ID)
                <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                    <thead>
                        <tr>
                            <th class="hidden-phone">@Model.ProductName  Ozellikleri</th>
                            <th class="hidden-phone">@Model.ProductName Ozellik Degeri</th>
                            <th class="hidden-phone"> Sil</th>
                            <th class="hidden-phone">Güncelle</th>


                        </tr>
                    </thead>
                    <tbody>

                        @foreach (ProductAttribute item in Model.ProductAttributes)
                        {
                            <tr class="gradeX">
                                <td> @item.Attribute.AttributeName     </td>
                                <td>
                                    @Html.TextBox("valueName", null)
                                </td>




                                <td class="center hidden-phone">@Html.ActionLink("Sil", "DeleteProduct", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
                                <td class="center hidden-phone"> @Html.ActionLink("Güncelle", "UpdateProduct", new { id = item.ID }, new { @class = "btn btn-warning" })  </td>
                            </tr>
                        }






                    </tbody>
                </table>

                if (Model.ProductAttributes.Count != 0)
                {
                    <button class="btn btn-primary"> Ozellikleri Kaydet </button>
                }

            }

        </div>
    </div>
</section>



