@model AppUserDetail
@{
    ViewBag.Title = "UpdateUserDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x=>x.ID)
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Kullanıcı Detayı Düzenleme Sayfası
                </header>
                <div class="panel-body">
                    <form role="form" class="form-horizontal tasi-form">
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Ad</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Soyad</label>
                            <div class="col-lg-10">
                                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group has-success">
                            <label class="col-lg-2 control-label">Kullanıcı</label>
                            <div class="col-lg-10">
                                @Html.DropDownList("userID", new SelectList(ViewBag.Kullanicilar, "ID", "UserName"), "Lutfen Seciniz", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
}

